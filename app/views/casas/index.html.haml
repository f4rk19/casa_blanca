  .main__search-form
    %input.main__search-form__text{type: "text", placeholder: "Search by city or hostel name..."}
    %input.main__search-form__date-start{type: "date", value: "2020-01-01"}
    %input.main__search-form__date-end{type: "date", value: "2020-01-01"}
    %input.main__search-form__guest{type: "select", prompt: "Guest"}
    %input.main__search-form__btn{type: "submit", value: "Search"}
  .main__search-form-js
    %input.main__search-form-js{tyoe: "text", placeholder: "Search by city or hostel name..."}
  .main__search-form-mobile.not-show
    .search-mobile
      .search-mobile__title
        %span Search
      .search-mobile__input
        %input{type: "text", placeholder: "Search by city or hostel name..."}

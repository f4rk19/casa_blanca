.header
  = render "header"
.main
  .main__upper
    .main__upper-slick
      .slick-list
        = image_tag "oia-416136_1920.jpg", class: "slick-list__image"
      .slick-list
        = image_tag "white-village-5361750_1920.jpg", class: "slick-list__image"
      .slick-list
